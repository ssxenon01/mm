<?php

/* Using ConfigSchema since it's more convenient */
class HTMLPurifier_ConfigPrinter
{

    public function __construct() {}

}

class HTMLPurifier_ConfigPrinter_NullDecorator extends HTMLPurifier_ConfigPrinter
{
    protected $printer;
    public function __construct($printer) {
        parent::__construct();
        $this->printer = $printer;
    }
    public function render($config, $ns, $directive) {
        $value = $config->get($ns, $directive);
        if ($value === null) {
            return 'null';
        } else {
            return $this->printer($config, $ns, $directive);
        }
    }
}

class HTMLPurifier_ConfigPrinter_default extends HTMLPurifier_ConfigPrinter
{
    public function render($config, $ns, $directive) {
        $value = $config->get($ns, $directive);
        $def = $config->def->info["$ns.$directive"];
        if (is_int($def)) {
            $type = abs($def);
        } else {
            $type = $def->type;
        }
    }
}
